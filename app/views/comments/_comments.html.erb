<div class="container">
	<div>
		<h2>Comments</h2>
	</div>
	<div class="well">
		<% @post.comments.each do |c| %>
			<p>
				<%= c.uname %>
				<% #byebug %>
				<%= link_to 'Remove', post_comment_path(c.id), method: :delete, data: { confirm: 'Are you sure?'} %>
			</p>
			<p>
				<%= c.content %>
			</p>	
		<% end %>
	</div>	
</div>